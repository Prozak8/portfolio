.project-area
    - project_details = 0
    - data.projects.each do |project|
        %div{id: "this_#{project_details}", onclick: "openModal(#{project_details})"}
            %a
                .project-main{style: "background-image: url(#{project.image})"}
                    .project-title
                        = project.name
                    .project-info
                        = project.description

        %div{id: "myModal_#{project_details}", class: "modal"}
            .modal-content
                %span.close &times;
                %h2= project.name
                %p= project.long_description
                = link_to "View on Github", "#{project.github}", target: '_blank'
                = link_to "Livesite", "#{project.livesite}", target: '_blank' if !project.livesite.nil?
                - project_details +=1
